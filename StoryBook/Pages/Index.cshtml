@page
@model IndexModel
@{
    ViewData["Title"] = "故事書";
}

<style>
    .home-container {
        min-height: 80vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #FFF8E1 0%, #E8F5E9 100%);
        border-radius: 30px;
        padding: 3rem;
        margin: 1rem 0;
    }

    .home-title {
        font-size: 3.5rem;
        font-weight: 700;
        color: #7CB342;
        text-shadow: 3px 3px 6px rgba(0,0,0,0.1);
        margin-bottom: 1rem;
    }

    .home-subtitle {
        font-size: 1.3rem;
        color: #5D4037;
        margin-bottom: 3rem;
        text-align: center;
    }

    .home-emoji-container {
        font-size: 5rem;
        margin-bottom: 2rem;
        display: flex;
        gap: 1rem;
    }

    .home-emoji {
        animation: bounce 2s infinite;
    }

    .home-emoji:nth-child(2) {
        animation-delay: 0.3s;
    }

    @@keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
    }

    .storybook-buttons {
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    .btn-storybook {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1.25rem 2.5rem;
        font-size: 1.5rem;
        font-weight: 600;
        color: white;
        border: none;
        border-radius: 50px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-storybook:hover {
        color: white;
        transform: translateY(-5px);
    }

    .btn-storybook:active {
        transform: translateY(-2px);
    }

    .btn-dinosaur {
        background: linear-gradient(135deg, #7CB342 0%, #558B2F 100%);
        box-shadow: 0 8px 25px rgba(124, 179, 66, 0.4);
    }

    .btn-dinosaur:hover {
        box-shadow: 0 12px 35px rgba(124, 179, 66, 0.5);
    }

    .btn-aquarium {
        background: linear-gradient(135deg, #29B6F6 0%, #0288D1 100%);
        box-shadow: 0 8px 25px rgba(41, 182, 246, 0.4);
    }

    .btn-aquarium:hover {
        box-shadow: 0 12px 35px rgba(41, 182, 246, 0.5);
    }

    .btn-icon {
        font-size: 2rem;
    }
</style>

<div class="home-container">
    <div class="home-emoji-container">
        <span class="home-emoji">🦖</span>
        <span class="home-emoji">🐠</span>
    </div>
    <h1 class="home-title" data-lang-zh="故事書" data-lang-en="StoryBook">故事書</h1>
    <p class="home-subtitle">
        <span data-lang-zh="歡迎來到奇妙的動物世界！" data-lang-en="Welcome to the wonderful world of animals!">歡迎來到奇妙的動物世界！</span>
        <br>
        <span data-lang-zh="選擇你想認識的動物們吧！" data-lang-en="Choose the animals you want to learn about!">選擇你想認識的動物們吧！</span>
    </p>
    
    <div class="storybook-buttons">
        <a asp-page="/Dinosaurs/Index" class="btn-storybook btn-dinosaur">
            <span class="btn-icon">🦕</span>
            <span data-lang-zh="恐龍介紹" data-lang-en="Meet the Dinosaurs">恐龍介紹</span>
        </a>
        
        <a asp-page="/Aquarium/Index" class="btn-storybook btn-aquarium">
            <span class="btn-icon">🐋</span>
            <span data-lang-zh="水族館動物介紹" data-lang-en="Aquarium Animals">水族館動物介紹</span>
        </a>
    </div>
</div>
